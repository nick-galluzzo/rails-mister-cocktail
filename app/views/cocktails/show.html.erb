<div class="container">
  <section class="grid-form">
    <div class="form-header">
      <h2><%= @cocktail.name %></h2>
      <%= link_to 'Delete', cocktail_path(@cocktail), id: 'delete-cocktail', class: 'btn btn-outline-danger', method: :delete %>
    </div>

    <div class="add-ingredient-section">
      <!-- Button -->
      <a href="#" class="add-ingredient-btn" data-toggle="modal" data-target="#add-ingredient-modal">Add Ingredient</a>

      <!--  -->


      <!--  -->

      <% @cocktail.doses.each do |dose| %>
      <!-- needed to un-nest the dose delete route in order to be able to delete specific dose instead of /cocktail/id/dose/id -->
      <!-- check routes to understand this more -->
      <li><%= dose.ingredient.name %> - <%= dose.description %> <%=link_to 'ðŸ—‘', dose_path(dose), method: :delete %></li>
      <% end %>
      <br>
      <br>

      <h4>Add an ingredient</h4>
      <%= simple_form_for [@cocktail, @dose] do |f|%>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit 'Add ingredients', class: 'btn btn-outline-success' %>
      <% end %>
    </div>
  </section>

  <br>

  <%= link_to 'Go Back', cocktails_path, class: 'btn btn-outline-dark' %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalTraffic">
    Launch demo modal
  </button>



