<div class="container-header">
  <div class="logo">
  <%= image_tag 'logo', class: 'logo' %>
  </div>
  <div class="header-button">
  <%= link_to "Create a new cocktail", new_cocktail_path, class: 'btn btn-outline-dark create-button' %>
  </div>
</div>
<div class="cocktail-grid">
  <% @cocktails.each_with_index do |cocktail, index| %>
  <div class="card" style="width: 18rem;">
   <%= link_to cocktail_path(cocktail) do  %>
    <%= image_tag picturize(index) %>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
    </div>
  </div>
  <% end %>
</div>


